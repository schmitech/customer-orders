# Customer Orders Dashboard Configuration
# Copy this file to .env.local and update the values

# =================================
# Database Configuration
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=customer_orders
DB_USER=postgres
DB_PASSWORD=your_password_here
# For AWS RDS / remote Postgres, SSL is enabled automatically. Set to "disable" only for localhost without SSL.
# DB_SSL_MODE=disable

# Server Configuration
PORT=3001

# =================================
# API Configuration
# =================================
VITE_API_URL=http://localhost:3000
VITE_API_KEY=intent-key

# =================================
# Widget Configuration
# =================================
VITE_WIDGET_SOURCE=npm
VITE_WIDGET_DEBUG=true
VITE_NPM_WIDGET_VERSION=0.4.11

# =================================
# Customer Orders Dashboard App Configuration
# =================================
VITE_ORG_NAME=Customer Order Dashboard
VITE_ORG_TAGLINE=Real-time analytics and insights for your business operations. Track orders, customers, and performance metrics.
VITE_ORG_PHONE=(555) 123-4567
VITE_ORG_EMAIL=support@customerorders.com

# =================================
# Chatbot Widget Customization
# =================================
VITE_WIDGET_HEADER_TITLE=Order Analytics Assistant
VITE_WIDGET_WELCOME_TITLE=Welcome to Customer Order Dashboard!
VITE_WIDGET_WELCOME_DESCRIPTION=Your AI assistant for order analytics, customer insights, performance metrics, and business intelligence. Get real-time insights and answers about your data.

# Suggested questions (JSON array format) - Business analytics focused
VITE_WIDGET_SUGGESTED_QUESTIONS=[{"text":"What are our top performing products?","query":"What are the top selling products and their performance metrics?"},{"text":"How are our sales trending?","query":"What are the current sales trends and performance indicators?"},{"text":"Who are our best customers?","query":"Who are our top customers by order value and frequency?"},{"text":"What's our order fulfillment rate?","query":"What is our current order fulfillment rate and processing times?"},{"text":"Show me recent order activity","query":"What are the most recent orders and their current status?"},{"text":"What insights can you provide?","query":"What key business insights and recommendations can you provide from the data?"}]

